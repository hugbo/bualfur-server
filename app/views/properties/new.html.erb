<div class="leftContainer container">
  <div id="porpertyListingTitle">
    <h1>Please fill out the form</h1>
  </div>

  <%= form_for :property, url: properties_path do |f| %>
<div class="flexContainer">
  <div id="propertyListingLeft">

    <p>
        <%= f.label :address %>
        <br>
        <%= f.text_field :address %>
    </p>

    <p>
        <%= f.label :zipcode %>
        <br>
        <%= f.text_field :zipcode %>
    </p>

    <p>
        <%= f.label :city %>
        <br>
        <%= f.text_field :city %>
    </p>

    <p>
        <%= f.label :price %>
        <br>
        <%= f.text_field :price %>
    </p>

    <p>
        <%= f.label :size %>
        <br>
        <%= f.text_field :size %>
    </p>

    <p>
        <%= f.label :num_bedrooms, "Number of Bedrooms" %>
        <br>
        <%= f.text_field :num_bedrooms %>
    </p>

    <p>
        <%= f.label :num_bathrooms, "Number of Bathrooms" %>
        <br>
        <%= f.text_field :num_bathrooms %>
    </p>

  </div>
  <div id="propertyListingRight">

    <p>
        <%= f.label :property_type, "Property Type" %>
        <br>
        <%= f.text_field :property_type %>
    </p>

    <p>
      <%= f.label :lat, "Latitude" %>
        <br>
        <%= f.text_field :lat %>
    </p>

    <p>
      <%= f.label :lon, "Longitude" %>
        <br>
        <%= f.text_field :lon %>
    </p>

    <p>
      <%= f.label :image1, "Main image" %>
        <br>
        <%= f.file_field :image1 %>
    </p>

    <p>
      <%= f.label :image2, "Image 2" %>
        <br>
        <%= f.file_field :image2 %>
    </p>

    <p>
      <%= f.label :image3, "Image 3" %>
        <br>
        <%= f.file_field :image3 %>
    </p>

    <p>
      <%= f.label :image4, "Image 4" %>
        <br>
        <%= f.file_field :image4 %>
    </p>

  </div>

</div>
  <p>
      <%= f.submit  %>
  </p>

  <% end %>

</div>

<div class="rightContainer container">
    <div id="map"></div>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC8qF171O_qBdXdwSLnH07kFDtbCk5M1CY&callback=initNewPropertyMap"></script>
</div>
