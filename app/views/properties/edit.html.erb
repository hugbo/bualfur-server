<h1>Edit your property</h1>
<h2>Change your listing</h2>

<%= form_for @property_to_edit do |f| %>

<p>
    <%= f.label :address %>
    <br>
    <%= f.text_field :address %>
</p>

<p>
    <%= f.label :zipcode %>
    <br>
    <%= f.text_field :zipcode %>
</p>

<p>
    <%= f.label :city %>
    <br>
    <%= f.text_field :city %>
</p>

<p>
    <%= f.label :price %>
    <br>
    <%= f.text_field :price %>
</p>

<p>
    <%= f.label :size %>
    <br>
    <%= f.text_field :size %>
</p>

<p>
    <%= f.label :num_bedrooms, "Number of Bedrooms" %>
    <br>
    <%= f.text_field :num_bedrooms %>
</p>

<p>
    <%= f.label :num_bathrooms, "Number of Bathrooms" %>
    <br>
    <%= f.text_field :num_bathrooms %>
</p>

<p>
    <%= f.label :property_type, "Property Type" %>
    <br>
    <%= f.text_field :property_type %>
</p>

<p>
  <%= f.label :lat, "Latitude" %>
    <br>
    <%= f.text_field :lat %>
</p>

<p>
  <%= f.label :lon, "Longitude" %>
    <br>
    <%= f.text_field :lon %>
</p>



<p>
    <%= f.submit  "Update"%>
</p>

<%= link_to 'Delete', @property_to_edit, method: :delete, confirm: "This cannot be undone" %>

<% end %>
